{
  "swagger":"2.0",
  "info":{
    "title":"Coffee Bean API",
    "description":"This is the API Documentation for the Coffee Bean website",
    "version":"1.0.0"
  },
  "host":"localhost:8080",
  "basePath":"",
  "tags":[ 
      {
      "name": "General API",
      "description":"General APIs for BMaC"
      },
      {
        "name":"V1 User",
        "description":"V1 User APIs"
      },
      {
        "name":"V1 Auth",
        "description":"V1 Auth APIs"
      }
  ],
  "schemes":["http"],
  "consumes":["application/json"],
  "produces":["application/json"],
  "paths":{
    "/health":{
      "get":{
        "tags":["General API"],
        "summary":"Health Check",
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["V1 User"],
        "summary": "Login to app",
        "parameters": [
          {
            "name": "credentials",
            "in": "body",
            "description": "User login credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "description": "Login email address"
                },
                "password": {
                  "type": "string",
                  "description": "Login password"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/auth/sign-up":{
      "post":{
        "tags":["V1 User"],
        "summary":"Create a new user",
        "parameters": [
          {
            "name": "newUser",
            "in": "body",
            "description": "Reqiored signup information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "description": "User email address"
                },
                "username": {
                  "type": "string",
                  "description": "Username"
                },
                "first_name": {
                  "type": "string",
                  "description": "First name"
                },
                "middle_name": {
                  "type": "string",
                  "description": "Middle name"
                },
                "last_name": {
                  "type": "string",
                  "description": "Last name"
                },
                "password": {
                  "type": "string",
                  "description": "User password"
                },
                "mobile_number": {
                  "type": "string",
                  "description": "Mobile phone number"
                }
              },
              "required": [
                "email",
                "username",
                "first_name",
                "last_name",
                "password",
                "mobile_number"
              ]
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    },
    "/api/v1/auth/verify/:token":{
      "get":{
        "tags":["V1 User"],
        "summary":"Verify user email",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "description": "ID of the user to retrieve",
            "required": true,
            "schema": {
              "type": "string",
              "maxLength":250
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    },
    "/api/v1/auth/send-verification":{
      "post":{
        "tags":["V1 User"],
        "summary":"Request verification email",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User login email",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "description": "Login Email"
                }
              },
              "required": ["email"]
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    },
    "/api/v1/auth/reset-password": {
      "post": {
        "tags": ["V1 User"],
        "summary": "Reset account password",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User login credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "type": "string",
                  "description": "Login password"
                }
              },
              "required": ["password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/auth/send-reset-password": {
      "post": {
        "tags": ["V1 User"],
        "summary": "Send reset password email",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User login email",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "description": "Login email"
                }
              },
              "required": ["email"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/v1/user/all":{
      "get":{
        "tags":["V1 Auth"],
        "summary":"Get all users",
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    },
    "/api/v1/user/:id":{
      "get":{
        "tags":["V1 Auth"],
        "summary":"Get user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the user to retrieve",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      },
      "post":{
        "tags":["V1 Auth"],
        "summary":"Update user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the user to update",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      },
      "delete":{
        "tags":["V1 Auth"],
        "summary":"Delete user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the user to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK"
          },
          "400":{
            "description":"Bad Request"
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    }
  }
}